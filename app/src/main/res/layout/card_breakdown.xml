<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="breakdown"
            type="ie.setu.breakdownassist.models.BreakdownModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

        <RelativeLayout
            android:id="@+id/cardBreakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/title"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/imageIcon"
                android:text="@{breakdown.title}"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="hint_breakdownTitle" />

            <TextView
                android:id="@+id/description"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/title"
                android:text="@{breakdown.description}"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="hint_breakdownDescription" />

            <ImageView
                android:id="@+id/imagefavourite"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/description"
                app:srcCompat="@android:drawable/star_big_off" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageIcon"
                android:text="@{breakdown.phone}"
                android:textColor="@color/color_primary"
                tools:text="hint_breakdownPhone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>